{
  "name": "herasat",
  "private": true,
  "version": "2.0.0",
  "main": "dist/main.js",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "tsx --env-file=.env --watch src/main.ts",
    "build:tsc": "tsc -p . && tsc-alias",
    "build:prod": "rollup -c",
    "build:check": "tsc --noEmit",
    "lint": "eslint . --report-unused-disable-directives-severity error --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "db:gen": "tsx --env-file=.env src/data/db_types_gen.ts",
    "migrate:up": "tsx --env-file=.env src/migrator.ts up; yarn db:gen",
    "migrate:down": "tsx --env-file=.env src/migrator.ts down; yarn db:gen",
    "migrate:create": "tsx --env-file=.env src/migrator.ts create",
    "dev:worker": " tsx --env-file=.env --watch src/worker.ts"
  },
  "devDependencies": {
    "@paratco/eslint-config": "^2.3.0",
    "@paratco/live-file": "^1.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/adm-zip": "^0.5.7",
    "@types/busboy": "^1.5.4",
    "@types/node": "^22.15.34",
    "@types/object-hash": "^3.0.6",
    "eslint": "^9.30.0",
    "json-schema-to-ts": "^3.1.1",
    "kysely-codegen": "^0.18.5",
    "logform": "^2.7.0",
    "rollup": "^4.44.1",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.73",
    "@paratco/captcha": "^1.4.0",
    "adm-zip": "^0.5.16",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.10.0",
    "busboy": "^1.6.0",
    "csv-parse": "^5.6.0",
    "hyper-express": "^6.17.3",
    "kysely": "^0.28.2",
    "mime": "^4.0.7",
    "mysql2": "^3.14.1",
    "object-hash": "^3.0.0",
    "redis": "^5.5.6",
    "winston": "^3.17.0"
  }
}
